{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsx: debug",
      "type": "shell",
      "command": "node",
      "args": [
        "--import=tsx",
        "--env-file=.env",
        "--inspect-brk=9229",
        "src/app.ts"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "^Debugger attached\\.$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
